<div class="spellContainer">
    <h1 class="spellName"><%= spell.Spell_Name %></h1>
    <p class="spellDescriptionSubTitle">
        <%= spell.Spell_School %>
        <% if (spell.Spell_Subschool != null) { %>
            <%= spell.Spell_Subschool %>
        <% } %>
        <% if (spell.Spell_Descriptor != null) { %>
            <%= spell.Spell_Descriptor %>
        <% } %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Level:</strong> 
        <% for (let i=0; i < class_spells.length; i++) { %>
            <%= class_spells[i].Class_Name %> <%= class_spells[i].Spell_Level %>
            <% if (i != class_spells.length - 1) { %>
                ,
            <% } %>
        <% } %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Components:</strong> <%= spell.Spell_Components %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Casting Time:</strong> <%= spell.Spell_Casting_Time %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Range:</strong> <%= spell.Spell_Range %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Effect:</strong> <%= spell.Spell_Effect %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Target:</strong> <%= spell.Spell_Target %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Duration:</strong> <%= spell.Spell_Duration %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Saving Throw:</strong> <%= spell.Spell_Saving_Throw %>
    </p>
    <p class="spellDescriptionSubTitle">
        <strong>Spell Resistance:</strong> <%= spell.Spell_Resistance %>
    </p>
    <p class="SpellLongDescription">
        <%- spell.Spell_Description %>
    </p>
    <% if (spell.Spell_Material_Component != null) { %>
        <p class="SpellLongDescription">
            <em>Material Component: </em><%- spell.Spell_Material_Component %>
        </p>
    <% } %>
    <% if (spell.Spell_Focus != null) { %>
        <p class="SpellLongDescription">
            <em>Spell Focus: </em><%- spell.Spell_Focus %>
        </p>
    <% } %>
    <% if (spell.Spell_XP_Cost != null) { %>
        <p class="SpellLongDescription">
            <em>XP Cost: </em><%- spell.Spell_XP_Cost %>
        </p>
    <% } %>
</div>