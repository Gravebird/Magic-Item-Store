<div class="register">
    <h2>Register</h2>
    <hr>
    <form action="/register" method="POST">
        <div class="register-inputs">
            <label for="username">Username</label>
            <br>
            <input type="text" id="usernameField" name="username" placeholder="Enter Username">
            <br>

            <p><strong>Do not use your personal password!</strong> This is stored on my computer.</p>
            <label for="password">Password</label>
            <br>
            <input type="text" id="passwordField" name="password" placeholder="Enter Password">
        </div>

        <button type="submit" class="register-button" type="button">Register</button>

    </form>
    <div>
        <a href="/signin">
            <button class="signin-page-button" type="button">Back to Sign-In</button>
        </a>
    </div>
</div>