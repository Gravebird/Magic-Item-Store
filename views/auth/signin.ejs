<div class="sign-in">
    <form action="/signin" method="POST">
        <h2>Sign In</h2>
        <hr>
        <div class="signin-inputs">
            <label for="username">Username</label>
            <br>
            <input type="text" id="usernameField" name="username" class="form-control" placeholder="Enter Username">
            <br>

            <label for="password">Password</label>
            <br>
            <input type="password" id="passwordField" name="password" class="form-control" placeholder="Password">
        </div>
        <button class="signin-button" type="submit">Login</button>
    </form>
    <div>
        <a href="/register">
            <button class="new-register-button" type="button">New? Register Here!</button>
        </a>
    </div>
</div>